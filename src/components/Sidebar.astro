---
// Puedes importar tu logo aquí si lo necesitas
// import logo from '../assets/logo.png';
---

<!-- Alpine.js para el estado de colapsado -->
<script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>

<aside x-data="{ collapsed: false }" :class="collapsed ? 'w-20' : 'w-64'" class="fixed left-6 top-6 bg-white rounded-2xl shadow-xl flex flex-col items-center py-6 transition-all duration-300 z-50">
    <!-- Botón de colapsar/expandir -->
    <button @click="collapsed = !collapsed" class="absolute -right-4 top-8 bg-white border border-gray-200 rounded-full shadow p-1 hover:bg-gray-100 transition z-10">
        <svg x-show="!collapsed" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/></svg>
        <svg x-show="collapsed" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/></svg>
    </button>

    <!-- Logo -->
    <div class="mb-8 flex justify-center w-full">
        <img src="/path-to-your-logo.png" alt="Company Logo" :class="collapsed ? 'w-10' : 'w-20'" class="h-auto transition-all duration-300" />
    </div>

    <!-- Sección de Apps -->
    <div class="w-full px-2" :class="collapsed ? 'px-0' : 'px-6'">
        <h2 x-show="!collapsed" class="text-gray-400 text-xs font-bold mb-4 tracking-widest">APPS</h2>
        <ul class="space-y-2">
            <!-- Espacio para Cards -->
            <li>
                <a href="#" class="flex items-center gap-3 p-2 rounded-xl hover:bg-gray-100 transition group justify-left" :class="collapsed ? 'justify-center' : ''">
                    <span class="bg-green-100 text-green-500 rounded-xl p-2">
                        <!-- Bombilla -->
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 2a7 7 0 0 0-4 12.9V18a2 2 0 0 0 2 2h4a2 2 0 0 0 2-2v-3.1A7 7 0 0 0 12 2z"/></svg>
                    </span>
                    <span x-show="!collapsed" class="text-gray-700 font-medium">Insight</span>
                </a>
            </li>
            <li>
                <a href="#" class="flex items-center gap-3 p-2 rounded-xl hover:bg-gray-100 transition group justify-left" :class="collapsed ? 'justify-center' : ''">
                    <span class="bg-teal-100 text-teal-500 rounded-xl p-2">
                        <!-- Cámara -->
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect x="3" y="7" width="18" height="13" rx="2"/><circle cx="12" cy="13" r="4"/><path d="M5 7l2-4h10l2 4"/></svg>
                    </span>
                    <span x-show="!collapsed" class="text-gray-700 font-medium">Cards</span>
                </a>
            </li>
            <li>
                <a href="#" class="flex items-center gap-3 p-2 rounded-xl bg-gray-100 group justify-left" :class="collapsed ? 'justify-center' : ''">
                    <span class="bg-green-100 text-green-500 rounded-xl p-2">
                        <!-- Carrito -->
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
                    </span>
                    <span x-show="!collapsed" class="text-gray-700 font-medium">Market Place</span>
                </a>
            </li>
        </ul>
    </div>
</aside>
